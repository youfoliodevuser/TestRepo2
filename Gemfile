# See https://github.com/sstephenson/execjs#readme for more supported runtimes
gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# For oauth
gem 'oauth2'

# For vimeo
gem 'vimeo'
# See http://railscasts.com/episodes/328-twitter-bootstrap-basics?view=asciicast or https://github.com/seyhunak/twitter-bootstrap-rails
gem 'less-rails'
gem 'twitter-bootstrap-rails' 

# Provides an easy-to-use Rails 3.1 asset for Spin.js. Read more https://github.com/dnagir/spinjs-rails
gem 'spinjs-rails'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

gem 'acts-as-taggable-on'
